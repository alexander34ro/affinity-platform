ins: state, cckState
out: response
do:
  - if: |!cckState
    do: |(state) -> [$.cck.getInitialState] -> cckState

  - if: |!$.helper.isAuthorized(state.request, cckState.schema.deleteGroups)
    do:
      - ins:
          developerMessage: 'Unauthorized'
          userMessage: 'Unauthorized'
          status: 401
        out: cckState.result

  # do pre-processing
  - if: |cckState.result.status < 400 && !$.util.isNullOrUndefined(cckState.schema.beforeDeleteChain)
    do: |(cckState.schema.beforeDeleteChain, cckState) -> [$.runChain] -> cckState

  # do delete
  - if: |cckState.result.status < 400 && !$.util.isNullOrUndefined(cckState.schema.deleteChain)
    do: |(cckState.schema.deleteChain, cckState) -> [$.runChain] -> cckState

  # do post-processing
  - if: |cckState.result.status < 400 && !$.util.isNullOrUndefined(cckState.schema.afterDeleteChain)
    do: |(cckState.schema.afterDeleteChain, cckState) -> [$.runChain] -> cckState

  - |response.status <-- cckState.result.status
  - |response.data <-- cckState.result